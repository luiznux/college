#função para criar  uma matriz
def cria_matriz(linha,coluna):
    matriz = [0] * linha   # cria (aloca) x linhas
    for i in range(linha):
        matriz[i]=[0] * coluna  # aloca uma nova linha com x colunas
    return matriz


#função para printar o tabuleiro_gomoku
def print_tabuleiro(tabuleiro):
    for i in range(0,len(tabuleiro)):
        for j in range(len(tabuleiro[0])):
            print("%2d"%tabuleiro[i][j], " ", end="")




            
